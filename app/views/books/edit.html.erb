<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
  <% if @book.errors.any? %>
      <p class="err_head"><%= @book.errors.count %> errors prohibited this book from being saved:</p>
      <ul class="err_list">
        <% @book.errors.full_messages.each do |messages| %>
          <li><%= messages %></li>
        <% end %>
      </ul>
  <% end %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
 <div class="submit"><%= f.submit 'Update Book' %></div>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
